{
    "name": "arx/project",
    "description": "Clean starter Arx project",
    "keywords": ["arx", "framework", "starter kit"],
    "require": {
        "arx/core" : "*",
        "barryvdh/laravel-ide-helper": "1.*",
        "barryvdh/laravel-debugbar": "1.*"
    },
    "license": "MIT",
    "require-dev": {
        "mockery/mockery": "~0.9",
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan optimize",
            "php artisan publish"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate",
            "php artisan assets:publish arx/core",
            "php artisan arx:gen grunt"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "suggest": {
        "arx/arxmin": "Full Admin Management System"
    },
    "minimum-stability": "dev"
}
