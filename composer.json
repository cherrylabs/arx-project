{
    "name": "arx/project",
    "description": "Clean starter project for Arx",
    "keywords": ["arx", "framework", "starter kit"],
    "require": {
        "arx/core" : "*"
    },
    "license": "MIT",
    "require-dev": {

    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan optimize",
            "php artisan publish",
            "bower install arx-ui"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev"
}
